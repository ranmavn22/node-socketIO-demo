<html>
<head>
    <title>Demo chat realtime</title>
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js"></script>
    <script src="/xuly.js"></script>
</head>
<body class="chatLogin">
    <div class="register">
        <p>Tên <input type="text" name="name" class="txtNameRegister"></p>
        <p><button class="btnRegister">Đăng kí</button></p>
    </div>
    <div class="chatForm">
        <div class="left">
            <div class="boxtitle">
                <h3>Đang online</h3>
            </div>
            <div class="listUser">
                <ul>
                    <li>Thinguyen</li>
                    <li>Thanhnguyen</li>
                </ul>
            </div>
            <div class="boxtitle">
                <h3>Room chat</h3>
            </div>
            <div class="ListRoom">
                <ul>
                    <li>Thinguyen</li>
                    <li>Thanhnguyen</li>
                </ul>
            </div>
        </div>
        <div class="right">
            <div class="user">
                <h4>Hello: <span class="currentUser"></span> <button class="logout">Thoát</button></h4>
            </div>
            <div class="user">
                <input type="text" class="txtTaoRoomChat"> <button class="btnTaoRoom">Tạo Room</button></h4>
            </div>
            <div id="ChatBox"></div>
            <div class="userHasEnter"></div>
            <input type="text" id="txtMessage">
            <input type="button" value="Gửi" class="sendMessage">
        </div>
    </div>
</body>
</html>